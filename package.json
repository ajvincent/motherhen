{
  "name": "motherhen",
  "version": "0.2.0",
  "engines": {
    "node": ">=18.12"
  },
  "description": "Creating new Mozilla-based applications",
  "type": "module",
  "scripts": {
    "eslint": "eslint --max-warnings=0 typescript-cli",
    "help": "./cli/motherhen.mjs --help",
    "mach": "./cli/motherhen.mjs mach",
    "setup": "./cli/motherhen.mjs setup",
    "start": "./cli/motherhen.mjs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:clean": "rm -rf test/checkouts",
    "test:create": "./cli/motherhen.mjs create --config=./test/.motherhen-config.json --project=default",
    "test:configure": "./cli/motherhen.mjs mach configure --config=./test/.motherhen-config.json --project=default",
    "test:build": "./cli/motherhen.mjs mach build --config=./test/.motherhen-config.json --project=default",
    "test:run": "./cli/motherhen.mjs mach run --config=./test/.motherhen-config.json --project=default",
    "test:package": "./cli/motherhen.mjs mach package --config=./test/.motherhen-config.json --project=default",
    "test:where": "./cli/motherhen.mjs where --config=./test/.motherhen-config.json --project=default",
    "tsc": "rm -rf ./cli/*/* && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajvincent/motherhen.git"
  },
  "keywords": [
    "Mozilla"
  ],
  "author": "Alexander J. Vincent <ajvincent@gmail.com>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/ajvincent/motherhen/issues"
  },
  "homepage": "https://github.com/ajvincent/motherhen#readme",
  "dependencies": {
    "commander": "^9.4.1",
    "ini": "^3.0.1",
    "inquirer": "^9.1.4",
    "inquirer-file-tree-selection-prompt": "^2.0.5",
    "inquirer-interrupted-prompt": "^2.0.1",
    "replace-in-file": "^6.3.5",
    "wget-improved": "^3.3.1",
    "which": "^3.0.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/argparse": "^2.0.10",
    "@types/ini": "^1.3.31",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.11.18",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "typescript": "^4.9.4"
  }
}
